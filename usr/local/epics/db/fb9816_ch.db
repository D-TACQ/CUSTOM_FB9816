# define a single value for FB

# user sets this value
#

# 0 -> 0
# 512 -> 1.0
# 5120-> 10.0
# 1/512 = 0.001953125
# send RVAL to target

record(ao, "${UUT}:${SITE}:${FUN}:${CH}") {
	field(DTYP, "Raw Soft Channel")
    field(OUT, "${UUT}:${SITE}:${FUN}:${CH}:raw")
	field(FLNK, "${UUT}:${SITE}:${FUN}:${CH}:raw")
	field(ESLO, "0.001953125")
	field(EOFF, "0")
    field(LINR, "SLOPE")
    field(DRVH, "63")
    field(DRVL, "-63")	
}

# physical output

record (longout, "${UUT}:${SITE}:${FUN}:${CH}:raw") {
	field(DTYP, "stream")
    field(OUT,  "@fb9816.proto setFun(${pfn},${CH}) ${SPORT}")
}

